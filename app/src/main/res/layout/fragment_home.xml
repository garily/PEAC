<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/screen2_cropped"
		>


	<ImageButton
			android:layout_width="30dp"
			android:layout_height="30dp"
			app:srcCompat="@drawable/info_button"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:scaleType="centerInside"
			android:layout_margin="5dp"
			android:id="@+id/imgBtnInfo"
			android:background="@null"
			/>

	<ImageButton
			android:layout_width="200dp"
			android:layout_height="100dp"
			app:srcCompat="@drawable/start_button"
			android:layout_above="@+id/imgBtnInfo"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="93dp"
			android:id="@+id/imgBtnStartSession"
			android:scaleType="centerInside"
			android:background="@null"
			/>

	<ImageButton
			android:layout_width="50dp"
			android:layout_height="50dp"
			app:srcCompat="@android:drawable/checkbox_on_background"
			android:layout_above="@+id/imgBtnStartSession"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_marginLeft="67dp"
			android:layout_marginStart="67dp"
			android:layout_marginBottom="70dp"
			android:background="@null"
			android:visibility="gone"
			android:id="@+id/imgBtnBaselineDone1"
			/>

	<TextView
			android:text="@string/strCredits"
			android:visibility="gone"
			android:textAlignment="center"
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:id="@+id/tvCredits"
			android:layout_alignParentBottom="true"
			/>
</RelativeLayout>